<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.sardinha.iohan.eventos">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NovoEventoActivity"
            android:label="@string/novo_evento" />
        <activity
            android:name=".DetalhesEventoActivity"
            android:label="Detalhes" />
        <activity
            android:name=".EventosActivity"
            android:label="" />
        <activity
            android:name=".NovoUsuarioAcivity"
            android:label="Novo usuÃ¡rio" />
        <activity
            android:name=".UsuarioActivity"
            android:label="Detalhes" />
        <activity
            android:name=".ResultadoPesquisaActivity"
            android:label="@string/title_activity_resultado_pesquisa"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".confirmarPresentesActivity" />

        <service android:name=".FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

        <activity android:name=".LoadingActivity">
            <intent-filter>
                <action android:name="NOVO_EVENTO" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".TrocarSenhaActivity"></activity>
    </application>

</manifest>