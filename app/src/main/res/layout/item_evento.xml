<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="215dp"
    android:layout_margin="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="7dp"
    card_view:contentPadding="1dp">

    <TextView
        android:id="@+id/nome_usuario_item_evento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imagem_item_lista"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY" />


    <TextView
        android:id="@+id/titulo_item_evento"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="152dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/endereco_item_evento"
        android:layout_width="250dp"
        android:layout_height="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="175dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

    <TextView
        android:id="@+id/hora_item_evento"
        android:layout_width="250dp"
        android:layout_height="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="190dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

    <FrameLayout
        android:id="@+id/dateContainer"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="22dp"
        android:background="@color/dataContainer">

        <TextView
            android:id="@+id/mes_item_evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dia_item_evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start|end"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            android:textStyle="bold" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/participarButton"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/imagemParticipandoItem"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/textoParticipandoItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="10sp" />
    </FrameLayout>


</android.support.v7.widget.CardView>