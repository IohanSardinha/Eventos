<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detalhes_evento"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.sardinha.iohan.eventos.DetalhesEventoActivity">

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@android:drawable/ic_menu_report_image"
        android:id="@+id/imagem_detalhes"
        android:layout_height="100sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY"/>

    <TextView
        android:text="Dia 00/00/0000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/data_detalhes"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/imagem_detalhes"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

    <TextView
        android:text="Evento (pivacidade)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/privacidade_detalhes"
        android:layout_below="@id/data_detalhes"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:inputType="textMultiLine"
        android:layout_marginLeft="10dp"
        android:id="@+id/descricao_detalhes"
        android:text="Descrição"
        android:textColor="@android:color/black"
        android:layout_below="@id/privacidade_detalhes"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:text="Limite de convidados :\n0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/limite_detalhes"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/privacidade_detalhes"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp" />


</RelativeLayout>
